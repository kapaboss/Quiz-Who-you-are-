<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podsumowanie Quizu"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="20dp"/>


        <TextView
            android:id="@+id/personality_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Typ osoby: "
            android:textSize="18sp"
            android:paddingBottom="12dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/quiz_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data wykonania: "
            android:textSize="18sp"
            android:paddingBottom="12dp"/>


        <TextView
            android:id="@+id/quiz_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Godzina wykonania: "
            android:textSize="18sp"
            android:paddingBottom="12dp"/>


        <TextView
            android:id="@+id/quiz_interests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zainteresowania: "
            android:textSize="18sp"
            android:paddingBottom="12dp"/>


        <TextView
            android:id="@+id/quiz_friends_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Czas ze znajomymi: "
            android:textSize="18sp"
            android:paddingBottom="12dp"/>


        <TextView
            android:id="@+id/quiz_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wybrany kolor: "
            android:textSize="18sp"
            android:paddingBottom="12dp"/>

        <ImageView
            android:id="@+id/personality_imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:contentDescription="Obrazek osobowości" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jak oceniasz zgodność quizu?"/>

        <RatingBar
            android:id="@+id/my_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="2.5"
            android:isIndicator="false"
            />




    </LinearLayout>
</ScrollView>
